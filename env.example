# Backend Principal (tu servidor existente)
# IMPORTANTE: Cambia esto al puerto donde corre tu backend de chat
BACKEND_SOCKET_URL=http://localhost:4000
BACKEND_API_URL=http://localhost:4000/api

# Groq AI API (Gratis, sin cuotas estrictas)
GROQ_API_KEY=tu-api-key-de-groq
# Modelo de Groq a usar (opcional, por defecto: llama-3.1-8b-instant)
# Opciones: llama-3.1-8b-instant (rápido), llama-3.1-70b-versatile (potente), mixtral-8x7b-32768
GROQ_MODEL=llama-3.1-8b-instant

# Firebase (para obtener emails de usuarios y enviar correos)
FIREBASE_PROJECT_ID=tu-proyecto-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@tu-proyecto.iam.gserviceaccount.com

# Brevo (Sendinblue) - Para envío de correos vía API REST
# IMPORTANTE: Usar API REST en lugar de SMTP porque Render bloquea puertos SMTP
BREVO_API_KEY=tu-api-key-de-brevo
BREVO_FROM_EMAIL=noreply@tudominio.com
BREVO_FROM_NAME=Sistema de Resúmenes de Reuniones

# OpenAI API (para transcripción de audio con Whisper)
# IMPORTANTE: Requiere API key de OpenAI
# Obtén una API key en: https://platform.openai.com/api-keys
# Costo: $0.006 por minuto de audio (muy económico)
OPENAI_API_KEY=tu-api-key-de-openai
# Modelo opcional de OpenAI
OPENAI_WHISPER_MODEL=whisper-1

# Orden de proveedores de transcripción (prioridad de izquierda a derecha)
# Valores soportados: groq, openai
TRANSCRIPTION_PROVIDERS=groq,openai
# Modelo de Groq para transcripción (whisper-large-v3 recomendado)
GROQ_WHISPER_MODEL=whisper-large-v3

# Nota: Los correos se envían directamente usando Brevo
# Los resúmenes también se guardan en Firestore para referencia

# Servidor
PORT=4001
NODE_ENV=development

# Nota: El puerto 4001 es el correcto (4000 lo usa el backend de chat)

